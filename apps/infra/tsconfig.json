{
  "extends": "@repo/typescript-config/node",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "bin/**/*.ts",
    "lib/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cdk.out",
    "dist"
  ]
}